<BorderPane xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.dizionariograph.DizionarioGraphController">
   <top>
      <Label text="Lab8_Dizionario" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="12.0" prefWidth="591.0">
               <children>
                  <Label text="Inserire il numero di lettere:" />
                  <AnchorPane prefHeight="36.0" prefWidth="202.0">
                     <children>
                        <TextField fx:id="txtLettere" layoutX="39.0" layoutY="-2.0" />
                     </children>
                  </AnchorPane>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Inserire una parola da cercare:" />
                  <AnchorPane prefHeight="36.0" prefWidth="202.0">
                     <children>
                        <TextField fx:id="txtParola" layoutX="21.0" layoutY="5.0" />
                     </children>
                  </AnchorPane>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <AnchorPane>
               <children>
                  <Button layoutY="1.0" mnemonicParsing="false" onAction="#handleGraph" text="Genera grafo" />
                  <Button layoutX="469.0" layoutY="1.0" mnemonicParsing="false" onAction="#handleGrade" text="Trova grado max" />
                  <Button layoutX="235.0" layoutY="1.0" mnemonicParsing="false" onAction="#handleNear" text="Trova vicini" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </AnchorPane>
            <TextArea fx:id="txtResult" editable="false" />
            <AnchorPane>
               <children>
                  <Button layoutX="548.0" layoutY="6.0" mnemonicParsing="false" onAction="#handleReset" text="Reset" />
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </AnchorPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
